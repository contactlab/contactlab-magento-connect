        <jobs>
            <contactlab_subscribers_stats_recalc>
                <schedule>
                    <cron_expr>0 4 * * *</cron_expr>
                </schedule>
                <run>
                    <model>contactlab_subscribers/cron::addCalcStatsQueue</model>
                </run>
            </contactlab_subscribers_stats_recalc>
        </jobs>
    </crontab-->
</config>
